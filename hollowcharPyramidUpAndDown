package java100days;
public class hollowcharPyramidUpAndDown {
	public static void main(String[] args) {
		int n=9;
		int x=5;
		int p=1;
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=n;j++)
			{
				if(j==x||j==n-x+1)
				{
					System.out.print((char)(p+64));
				}
				else
				{
					System.out.print(" ");
				}
			}
			if(i<=n/2)
			{
				p++;
			x=x-1;
			}
			else
			{
				p--;
				x=x+1;
			}
			System.out.println();
		}

	}

}
